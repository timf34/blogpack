[Unit]
Description=Blogpack Web App
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/blogpack/blogpack-web
Environment="PATH=/opt/blogpack/venv/bin"
ExecStart=/opt/blogpack/venv/bin/uvicorn app:app --host 0.0.0.0 --port 8000 --workers 1 --limit-max-requests 100
Restart=always
RestartSec=5

# Memory management
MemoryMax=1800M
MemoryHigh=1500M

# Security hardening
NoNewPrivileges=true
PrivateTmp=true

[Install]
WantedBy=multi-user.target
